{
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        {
            "language": "typescript",
            "autoFix": true
        },
        {
            "language": "typescriptreact",
            "autoFix": true
        }
    ],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.scss$",
                "cmd": "yarn stylelint ${file} --fix"
            },
        ]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}