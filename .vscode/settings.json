{
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.scss$",
                "cmd": "yarn stylelint ${file} --fix"
            },
        ]
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}